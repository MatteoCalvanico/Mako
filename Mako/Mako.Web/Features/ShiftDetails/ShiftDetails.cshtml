@model Mako.Web.Features.ShiftDetails.CombinedViewModel

@{
    ViewData["Title"] = "Shift Details";
}

@if (Model == null)
{
    <h1>Ship not found</h1>
    <p>The ship you are looking for does not exist or has been removed.</p>
}
else
{
    <h1>Dettagli della Nave</h1>
    <p>Nome: @Model.ShipViewModel.Name</p>
    <p>Data di Arrivo: @Model.ShipViewModel.DateArrival</p>
    <p>Data di Partenza: @Model.ShipViewModel.DateDeparture</p>
    <p>Pier: @Model.ShipViewModel.Pier</p>
    <p>Tempo Stimato: @Model.ShipViewModel.TimeEstimation</p>
    <p>Manifesto del Carico: @Model.ShipViewModel.CargoManifest</p>

    <h2>Turni Associati</h2>
    @if (Model.ShiftViewModel.Any())
    {
        <ul>
            @foreach (var shift in Model.ShiftViewModel)
            {
                <li>
                    <p>Pier: @shift.Pier</p>
                    <p>Data: @shift.Date</p>
                    <p>Ora di Inizio: @shift.StartHour</p>
                    <p>Ora di Fine: @shift.EndHour</p>
					@foreach (var worker in shift.Workers)
					{
						<p>Nome: @worker.Cf</p>
					}
                </li>
            }
        </ul>
    }
    else
    {
        <p>Nessun turno associato a questa nave.</p>
    }
}