@model Mako.Web.Features.Login.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutHtml";
}

@section styles {
    <link href="~/css/login.css" rel="stylesheet" />
}

<div class="login-container">
    <div class="login-header">
        <img src="~/images/logo.svg" alt="Logo" class="login-logo" />
        <h1 class="welcome-text"><strong>Welcome</strong></h1>
        <h2 class="login-subtext">Log in to start a new day</h2>
    </div>
    <div class="login-form-container">
        <form method="post" role="form" autocomplete="off">
            <input asp-for="ReturnUrl" type="hidden" />

            <div class="form-group">
                <div class="input-group">
                    <input asp-for="Email" placeholder="Email" class="form-control" type="text" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <input asp-for="Password" placeholder="Password" class="form-control" type="password" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <a href="/password-reset" class="password-reset-link">Did you forget your password?</a> <!--TODO: Add route-->
            </div>

            <div class="form-group">
                <div class="form-check form-switch">
                    <input asp-for="RememberMe" class="form-check-input" role="switch">
                    <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                </div>
            </div>

            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-primary">Log in</button>
            </div>
        </form>
    </div>
</div>
