@model Mako.Web.Features.Login.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutHtml";
}

<div class="row justify-content-center">
    <div class="col-12">
        <div class="login-container">
            <div class="login-header p-4">
                <img src="~/images/logo.svg" alt="Logo" class="login-logo" />
                <h1 class="welcome-text"><strong>Welcome</strong></h1>
                <h2 class="login-subtext">Log in to start a new day</h2>
            </div>
            <div class="login-form-container mt-4">
                <form method="post" role="form" autocomplete="off">
                    <input asp-for="ReturnUrl" type="hidden" />

                    <span>Email</span>
                    <div class="input-group">
                        <input asp-for="Email" placeholder="Email" class="form-control" type="text" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>

                    <span>Password</span>
                    <div class="input-group">
                        <input asp-for="Password" placeholder="Password" class="form-control" type="password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <div class="form-check form-switch mt-2">
                        <input asp-for="RememberMe" class="form-check-input" role="switch">
                        <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                    </div>

                    <div class="form-group text-center mt-3">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
    